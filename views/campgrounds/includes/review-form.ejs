<form
  id="review-form" class="needs-validation mb-3"
  data-campgroundid="<%= campground._id %>" novalidate>
  <div class="mb-3">
    <label class="form-label" for="rating">Rating</label>
    <input
      class="form-range" id="rating"
      type="range" name="review[rating]"
      min="1" max="5" />
  </div>
  <div class="mb-3">
    <label class="form-label" for="text">Review</label>
    <textarea
      class="form-control" id="text"
      rows="3" name="review[text]" required
    ></textarea>
  </div>
  <button class="btn btn-success">Submit</button>
</form>
