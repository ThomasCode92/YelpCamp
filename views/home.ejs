<%- include('./shared/includes/head', { pageTitle: 'YelpCamp' }) %>
    <link rel="stylesheet" href="styles/home.css">
  </head>
  <body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h3 class="float-md-left mb-0">YelpCamp</h3>
          <nav class="nav nav-masthead justify-content-center float-md-right">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
              <a class="nav-link" href="/campgrounds">Campgrounds</a>
              <% if(!locals.user) { %>
                <a class="nav-link" href="/auth/login">Login</a>
                <a class="nav-link" href="/auth/register">Register</a>
              <% } else { %>
                <a class="nav-link" href="/auth/logout">Logout</a>
              <% } %>
          </nav>
        </div>
      </header>
      <main class="px-3">
        <h1>YelpCamp</h1>
        <p class="lead">
          Welcome to YelpCamp!<br>
          Jump right in and explore our many campgrounds.<br>
          Feel free to share some of your own and comment on others!
        </p>
        <a href="/campgrounds" class="btn btn-lg btn-secondary font-weight-bold border-white bg-white">
          View Campgrounds
        </a>
      </main>
      <footer class="footer text-white py-3 mt-auto">
        <div class="container">
          <span>&copy; YelpCamp 2022</span>
        </div>
      </footer>
    </div>    
  </body>
</html>
